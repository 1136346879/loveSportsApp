<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_menu" />

    <LinearLayout
        android:id="@+id/af_timeshowing"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#646464"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/af_timeshowingtext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="2000年01月01日(每天步数)"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/af_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <cmccsi.mhealth.app.sports.view.XListView
                android:id="@+id/af_listview_rank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@color/transparent"
                android:divider="#D8D8D8"
                android:dividerHeight="1dp"
                android:fastScrollEnabled="true" >
            </cmccsi.mhealth.app.sports.view.XListView>

            <RelativeLayout
                android:id="@+id/af_listview_rl_face"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/af_listview_ll_face"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <cmccsi.mhealth.app.sports.view.RoundAngleImageView
                        android:id="@+id/af_listview_iv_face"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        app:roundHeight="20.0dip"
                        app:roundWidth="20.0dip" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>