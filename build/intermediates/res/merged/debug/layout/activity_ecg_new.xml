<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ecg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/title_menu" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_progress"
        android:layout_width="fill_parent"
        android:layout_height="205dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true" >

            <RelativeLayout
                android:id="@+id/Progress_center_rote2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_center_progress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@drawable/countdown_ring_22"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/textview_HR_BPM2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="80dip"
                    android:layout_marginTop="60dp"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <ImageView
                    android:id="@+id/img_heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="120dip"
                    android:layout_marginTop="55dp"
                    android:minHeight="15dp"
                    android:minWidth="15dp"
                    android:src="@drawable/ecg_bpm" />

                <TextView
                    android:id="@+id/text_mbwcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    android:text="心率"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/Progress_hr_result"
            android:layout_width="104dp"
            android:layout_height="91dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tab_4"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textview_rr_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#20832d"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Progress_hrv"
            android:layout_width="104dp"
            android:layout_height="91dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/tab_1"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textview_hrv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:textColor="#20832d"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Progress_rr"
            android:layout_width="104dp"
            android:layout_height="91dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/tab_3"
            android:visibility="visible" >

            <TextView
                android:id="@+id/textview_rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="--"
                android:textColor="#20832d"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textview_rr_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textview_rr"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dip"
                android:layout_toRightOf="@id/textview_rr"
                android:text="ms"
                android:textColor="#20832d"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Progress_heartlevel"
            android:layout_width="104dp"
            android:layout_height="91dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/tab_2"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="right" >

                <TextView
                    android:id="@+id/textview_heartlevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#20832d"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textview_heartlevel_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/textview_heartlevel"
                    android:layout_marginBottom="2dip"
                    android:layout_toRightOf="@id/textview_heartlevel"
                    android:text="%"
                    android:textColor="#20832d"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_percent"
        style="@style/brief_textcolor"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/progress_percent"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/mood_director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_MOOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="情绪状态 "
            android:textColor="@color/cyan"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ecg_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ecg_level2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="心率波 "
            android:textColor="@color/cyan"
            android:textSize="12sp" />
            <RelativeLayout
                android:id="@+id/ecg_view_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20.0dp"
                android:layout_marginRight="20.0dp"
                android:background="@drawable/bg_ecg" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20.0dp"
                    android:layout_marginRight="20.0dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="5dp" >
                </RelativeLayout>
            </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelaouut_start_ecg"
        style="@style/setting_item_and"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_unstart_ecg" >

        <TextView
            android:id="@+id/buttonText"
            style="@style/ListItemTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20.0dip"
            android:duplicateParentState="true"
            android:text="开始测量"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>


</LinearLayout>